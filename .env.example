# YouTube Transcript Application Environment Variables
# Copy this file to .env and fill in your actual values

# OpenAI Configuration (required for AI summarization)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4.1
OPENAI_MAX_TOKENS=100000
OPENAI_TEMPERATURE=0.7

# Anthropic Configuration (optional, for Claude AI models)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-sonnet-4-20250514

# YouTube Data API Configuration (required for channel import)
YOUTUBE_API_KEY=your_youtube_api_key_here

# Supabase Configuration (required for database storage)
SUPABASE_URL=your_supabase_project_url
SUPABASE_API_KEY=your_supabase_anon_key

# YouTube Proxy Configuration (optional)
YOUTUBE_PROXY=your_proxy_ip:port

# Flask Configuration
FLASK_DEBUG=True
FLASK_HOST=0.0.0.0
FLASK_PORT=33079